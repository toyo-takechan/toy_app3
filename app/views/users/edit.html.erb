<%= render 'layouts/aside' %>
<div class= "form">
  <h1 class="form_h1"><%=link_to "TOY  APPへようこそ", new_user_path %></h1>
  <%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :名前, class:"form_label"%> 
  <%= f.text_field :name, placeholder: "名前を入力してください。", class:"form_title" %>
  <%= f.label :email, class:"form_label" %>
  <%= f.email_field :email, placeholder: "メールアドレスを入力してください。", class:"form_title" %>
  <%= f.label :パスワード, class:"form_label" %>
  <%= f.password_field :password, class:"form_title" %>
  <%= f.label :確認パスワード, class:"form_label" %>
  <%= f.password_field :password_confirmation, class:"form_title" %>
  <%= f.submit "更新する", class:"form_btn" %>
  <% end %>
</div>
