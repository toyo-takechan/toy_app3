<%= render 'layouts/aside' %>
<div class="form">
  <h1 class="form_h1"><%=link_to "TOY  APPへようこそ", new_user_path %></h1>
  <%= form_with(model: @user, local: true) do |f|%>
  <%= f.label :名前, class:"form_label"%> 
  <%= f.text_field :name, placeholder: "名前を入力してください。", class:"form_title" %>
  <%= f.label :email, class:"form_label" %>
  <%= f.email_field :email, placeholder: "メールアドレスを入力してください。", class:"form_title" %>
  <%= f.submit "新規登録する", class:"form_btn" %>
  <% end %>
</div>
