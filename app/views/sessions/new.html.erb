<%= render 'layouts/aside' %>

<div class="form">
<h1 class="form_h1">ログイン</h1>
<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

<%= f.label :email, class: "form_label" %>
<%= f.email_field :email, class: "form_title" %>

<%= f.label :password, class:"form_label" %>
<%= f.password_field :password, class: "form_title" %>

<%= f.label :remember_me, class: "#" do %>
  <%= f.check_box :remember_me %>
  <span>ログイン状態を保持する</span>
<% end %>
 
<%= f.submit"ログイン", class:"form_btn" %>
<% end %>

<p>新規ユーザーですか？ <%= link_to "新規登録", new_user_path %>
</div>


