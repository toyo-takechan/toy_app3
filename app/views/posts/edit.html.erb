<div class="main">
  <h1 class="main-name"><%= link_to "投稿ページ", "#" %></h1>
  <div class="main-post">
    <p class="main-post-title"><%= @post.title  %></p>
    <span>
              <%= link_to "delete", @post, method: :delete,
                                       data: { confirm: "You sure?" } %>
          </span>
    <p class="main-post-content"><%= @post.content %></p>
    <p class="main-post-image"><%= image_tag @post.image if @post.image.attached? %></p>
    <%= paginate @posts %>
  </div>
</div>