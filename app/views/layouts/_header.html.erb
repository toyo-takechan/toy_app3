<header class="header">
  <div class="header-left">
    <%= link_to image_tag('robot1.png', alt:"logo",width:"70px"), robots_robot1_path, data: {"turbolinks" => false}, class:"header-left-robot" %>
    <%= link_to image_tag('robot2.png', alt:"logo",width:"90px"), robots_robot2_path, data: {"turbolinks" => false}, class:"header-left-robot" %>
    <%= link_to image_tag('robot6.jpeg', alt:"logo",width:"80px"), robots_robot3_path, data: {"turbolinks" => false}, class:"header-left-robot" %>
    <%= link_to image_tag('robot5.jpeg', alt:"logo",width:"70px"), robots_robot4_path, data: {"turbolinks" => false}, class:"header-left-robot" %>
    <p class="header-left-comment">クリックしてね。</p>
  </div>
  <div class="header-middle">
    <h1 ><%= link_to "TOY APP", root_url, class:"header-middle-title" %></h1>
  </div>
  <div class="header-right">
    <ul class= "header-right-ul">
      <% if logged_in? %>
        <li class= "header-right-ul_li header-right-btn"><%= link_to "ログアウト", logout_path, method: :delete %></li>
        <li class= "header-right-ul_li header-right-btn"><%= link_to "ユーザ更新", edit_user_path(current_user) %></li>
        <li class= "header-right-ul_li header-right-btn"><%= link_to "新規投稿", new_post_path %></li>
        <li class= "header-right-ul_li header-right-btn"><%= link_to "ユーザー一覧", users_path %></li>
      <% else %>
        <li class= "header-right-ul_li header-right-btn"><%= link_to "ホームへ", root_url %></li> 
        <li class= "header-right-ul_li header-right-btn"><%= link_to "サインアップ", new_user_path %></li>
        <li class= "header-right-ul_li header-right-btn"><%= link_to "ログイン", login_path %></li>
      <% end %>
    </ul>
  </div>
</header>